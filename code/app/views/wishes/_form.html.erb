<%= form_with model: @wish, local: true do |form| %>
 
  <% if @wish.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@wish.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @wish.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
 
  <p>
    <%= form.label :author %><br>
    <%= form.text_field :author %>
  </p>

  <p>
    <%= form.label :details %><br>
    <%= form.text_area :details %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
 
<% end %>
